  <h1 id="name" style="text-align: center;">Student Buddy's Name</h1>
  <img id="profile-picture" src="" alt="Profile Picture" style="width: 150px; height: 150px; border-radius: 35%;">
  <h3 id="university">University</h3>
  <p id="eating">Student buddy's description</p>
  <p id="age">Age of student buddy</p>
  <p id="status">Working or student buddy</p>
  <p id="location">Location of student buddy</p>
  <p id="sleeping-habits">Student buddy's sleeping habits</p>
  <p id="hobbies">Student buddy's hobbies</p> <!-- Add hobbies -->
  <p id="id">Location of student buddy</p>


  <!-- Add more details if needed -->
  
  <script>
    // JavaScript code to fetch and display profile details
    window.onload = function() {
  const params = new URLSearchParams(window.location.search);
  const name = params.get('name');
  const university = params.get('university');
  const id = params.get('id');
  const eating = params.get('eating');
  const image = params.get('image');
  const age = params.get('age');
  const status = params.get('status');
  const location = params.get('location');
  const sleepingHabits = params.get('sleepingHabits'); // Add this line
  const hobbies = params.get('hobbies'); // Add this line
  document.getElementById('id').textContent = id;

  document.getElementById('name').textContent = name;
  document.getElementById('university').textContent = university;
  document.getElementById('eating').textContent = "Eating Habits: "+eating;
  document.getElementById('profile-picture').src = '/images/'+image;
  document.getElementById('age').textContent = "Age: " + age; // Modify to display "Age: "
  document.getElementById('status').textContent = "Status: " + status; // Modify to display "Status: "
  document.getElementById('location').textContent = "Location: " + location; // Modify to display "Location: "
  document.getElementById('sleeping-habits').textContent = "Sleeping Habits: " + sleepingHabits; // Add this line
  document.getElementById('hobbies').textContent = "Hobbies: " + hobbies; // Add this line
};
  </script>
  
 <button class="chat-button" onclick="window.location.href=`/roomatechat?second_party=${document.getElementById('id').textContent}`">Chat Now </button>

