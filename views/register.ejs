   <script>
    $("#email").on("input", function() {
    checkFormValidity();
  });

  function checkFormValidity() {
    var email = $("#email").val();
    var isEmailValid = /\S+@\S+\.\S+/.test(email);

    $("#email").removeClass("is-invalid");
    $("#emailError").hide();

    if (!email || !isEmailValid) {
      $("#email").addClass("is-invalid");
      $("#emailError").show();
    }

    $("#registerbutton").prop("disabled", !isEmailValid);
  }
